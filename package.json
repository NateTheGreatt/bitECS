			"default": "./packages/utils/dist/index.js"
		}
	},
	"scripts": {
		"app": "npx tsx ./scripts/app.ts",
		"sim": "npx tsx ./scripts/sim.ts",
		"build": "pnpm --filter ./packages/**  -r build",
		"postinstall": "pnpm build"
	},
	"dependencies": {
		"@types/node": "latest",
		"tsx": "^4.15.7",
		"typescript": "latest"
