{
	"name": "bitecs",
	"private": true,
	"main": "./packages/classic/dist/index.cjs",
	"module": "./packages/classic/dist/index.js",
	"types": "./packages/classic/dist/index.js",
	"exports": {
		".": {
			"types": "./packages/classic/dist/index.js",
			"require": "./packages/classic/dist/index.cjs",
			"import": "./packages/classic/dist/index.js",
			"default": "./packages/classic/dist/index.js"
		},
		"./utils": {
			"types": "./packages/utils/dist/index.js",
			"require": "./packages/utils/dist/index.cjs",
